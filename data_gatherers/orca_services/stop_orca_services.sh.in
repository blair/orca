#!/bin/sh

AWK=@AWK@

# Kill any running orca_services.
pids=`/usr/ucb/ps auxww | $AWK '/orca_services/ && !/awk/ {print $2}'`
if test "$pids" != ""; then
  echo "Killing pids $pids."
  kill -HUP $pids
  sleep 1
  pids=`/usr/ucb/ps auxww | $AWK '/orca_services/ && !/awk/ {print $2}'`
  if test "$pids" != ""; then
    kill -TERM $pids
    sleep 1
    pids=`/usr/ucb/ps auxww | $AWK '/orca_services/ && !/awk/ {print $2}'`
    if test "$pids" != ""; then
      kill -9 $pids
      sleep 1
    fi
  fi
fi
