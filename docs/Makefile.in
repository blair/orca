@SET_MAKE@

prefix		= @prefix@
mandir		= @mandir@/man1
INSTALL		= @INSTALL@
MKDIR		= @MKDIR@
ORCA		= ../src/orca.pl
POD2HTML	= @POD2HTML@
POD2MAN		= @POD2MAN@
POD2TEXT	= @POD2TEXT@

TARGETS		= orca.html orca.man orca.txt

all:	Makefile $(TARGETS)

orca.html: $(ORCA)
	$(POD2HTML) $(ORCA) > $@

orca.man: $(ORCA)
	$(POD2MAN) $(ORCA) > $@

orca.txt: $(ORCA)
	$(POD2TEXT) $(ORCA) > $@

install: all
	$(MKDIR) $(mandir)
	$(INSTALL) -m 0644 orca.man $(mandir)/orca.1

Makefile: Makefile.in
	cd .. && CONFIG_FILES=docs/Makefile ./config.status

clean:
	$(RM) $(TARGETS) pod2html-*

distclean: clean
	$(RM) Makefile
