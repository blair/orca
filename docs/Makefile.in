prefix	= @prefix@
mandir	= @mandir@/man1
MKDIR	= @MKDIR@
INSTALL	= @INSTALL@
ORCA	= ../src/orca.pl

TARGETS	= orca.man orca.html orca.txt

all:	Makefile $(TARGETS)

orca.man: $(ORCA)
	pod2man $(ORCA) > $@

orca.html: $(ORCA)
	pod2html $(ORCA) > $@

orca.txt: $(ORCA)
	pod2text $(ORCA) > $@

install: all
	$(MKDIR) $(mandir)
	$(INSTALL) -m 0644 orca.man $(mandir)/orca.1

Makefile: Makefile.in
	cd .. && CONFIG_FILES=docs/Makefile ./config.status
	$(MAKE)

clean:
	$(RM) $(TARGETS) pod2html-*

distclean: clean
	$(RM) Makefile
